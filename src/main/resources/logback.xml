<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	  <file>/opt/web/mybase/logs/metaisiam-rest.log</file>
	  <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	    <fileNamePattern>/opt/web/mybase/logs/metaisiam-rest.%d{yyyyMMdd}_%d{HHmmss,aux}.log.zip</fileNamePattern>
		<TimeBasedFileNamingAndTriggeringPolicy class="sk.gov.finance.metais.iam.utility.StartupTimeBasedTriggeringPolicy" />
	    <maxHistory>10</maxHistory>
	  </rollingPolicy>

	  <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
	    <layout class="sk.gov.finance.metais.iam.utility.ThreadHashLayout">
	      <pattern>[%d{dd MMM yyyy HH:mm:ss.SSS}] [%11threadhash] %-5level %-25logger{0} - %msg%n</pattern>
	    </layout>
	  </encoder>
	</appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>


    <logger name="org.neo4j" level="WARN" />
    <logger name="sk.gov.finance.metais.iam.logger.filter" level="DEBUG" />
    <logger name="org.springframework.data.neo4j" level="WARN" />
    <logger name="sk.gov.finance.metais.iam" level="INFO" />
</configuration>
